<link href='http://fonts.googleapis.com/css?family=Quicksand' rel='stylesheet' type='text/css'>
<div class="hero-unit">

<% if current_user %>
  <%= @user.name %> is logged in
<% else %>
  <div id="signin-link"><%= link_to("Sign up", 'users/new') %></div>
<% end %>


  <h2>Twillex Currency Converter</h2>

  <%= form_tag("/exchange", :method => "post", class: 'form-inline') do %>
    <%= text_field_tag :amount, nil, placeholder: 'amount', class: "input-mini" %>
    <%= currencies_select_tag :from_currency, placeholder: 'from', class: "input-small" %>

    <%= currencies_select_tag :to_currency, placeholder: 'to', class: "input-small" %>
    <%= submit_tag "Submit", class: "btn btn-primary" %>
  <% end %>
</div>
